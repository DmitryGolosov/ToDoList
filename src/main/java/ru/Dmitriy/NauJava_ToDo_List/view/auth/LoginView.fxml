<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.Dmitriy.NauJava_ToDo_List.controller.AuthController"
            style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #3498db);">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="NauJava Todo List"
                   style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" />

            <VBox alignment="CENTER" spacing="10"
                  style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10; -fx-padding: 30;">
                <Label text="Вход в систему"
                       style="-fx-font-size: 24px; -fx-font-weight: bold;" />

                <VBox spacing="5">
                    <Label text="Логин или Email:" />
                    <TextField fx:id="loginUsername"
                               promptText="Введите логин или email"
                               style="-fx-pref-width: 300px;" />
                </VBox>

                <VBox spacing="5">
                    <Label text="Пароль:" />
                    <PasswordField fx:id="loginPassword"
                                   promptText="Введите пароль"
                                   style="-fx-pref-width: 300px;" />
                </VBox>

                <Label fx:id="loginError"
                       style="-fx-text-fill: red; -fx-font-size: 12px;" />

                <Button fx:id="loginButton"
                        text="Войти"
                        style="-fx-pref-width: 200px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />

                <HBox alignment="CENTER" spacing="5">
                    <Label text="Нет аккаунта?" />
                    <Hyperlink fx:id="registerLink" text="Зарегистрироваться" />
                </HBox>
            </VBox>
        </VBox>
    </center>

</BorderPane>
