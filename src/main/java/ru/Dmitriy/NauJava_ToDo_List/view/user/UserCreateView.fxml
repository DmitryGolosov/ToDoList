<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.Dmitriy.NauJava_ToDo_List.controller.UserCreateController"
      spacing="15"
      padding="20"
      style="-fx-background-color: #f5f5f5;">

    <!-- Заголовок формы -->
    <Label text="Добавление нового пользователя"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Основная форма -->
    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints prefWidth="120" halignment="RIGHT" />
            <ColumnConstraints prefWidth="250" />
        </columnConstraints>

        <!-- Имя -->
        <Label text="Имя:*"
               GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;" />
        <TextField fx:id="firstNameField"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"
                   promptText="Введите имя"
                   style="-fx-pref-width: 250px;" />

        <!-- Фамилия -->
        <Label text="Фамилия:*"
               GridPane.rowIndex="1" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;" />
        <TextField fx:id="lastNameField"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"
                   promptText="Введите фамилию"
                   style="-fx-pref-width: 250px;" />

        <!-- Email -->
        <Label text="Email:*"
               GridPane.rowIndex="2" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;" />
        <TextField fx:id="emailField"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"
                   promptText="example@domain.com"
                   style="-fx-pref-width: 250px;" />

        <!-- Логин -->
        <Label text="Логин:*"
               GridPane.rowIndex="3" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;" />
        <TextField fx:id="loginField"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"
                   promptText="Введите логин"
                   style="-fx-pref-width: 250px;" />

        <!-- Пароль -->
        <Label text="Пароль:*"
               GridPane.rowIndex="4" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;" />
        <PasswordField fx:id="passwordField"
                       GridPane.rowIndex="4" GridPane.columnIndex="1"
                       promptText="Минимум 8 символов"
                       style="-fx-pref-width: 250px;" />

        <!-- Подтверждение пароля -->
        <Label text="Подтверждение:*"
               GridPane.rowIndex="5" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;" />
        <PasswordField fx:id="confirmPasswordField"
                       GridPane.rowIndex="5" GridPane.columnIndex="1"
                       promptText="Повторите пароль"
                       style="-fx-pref-width: 250px;" />

        <!-- Активность -->
        <Label text="Статус:"
               GridPane.rowIndex="6" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;" />
        <HBox GridPane.rowIndex="6" GridPane.columnIndex="1" spacing="10">
            <CheckBox fx:id="activeCheckBox" text="Активен" selected="true" />
            <Label text="(пользователь сможет входить в систему)"
                   style="-fx-text-fill: #666; -fx-font-size: 11px;" />
        </HBox>
    </GridPane>

    <!-- Сообщения об ошибках -->
    <Label fx:id="errorLabel"
           style="-fx-text-fill: #e74c3c; -fx-font-size: 12px; -fx-wrap-text: true;"
           VBox.vgrow="ALWAYS" />

    <!-- Подсказки для пароля -->
    <VBox spacing="5" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-border-radius: 5;">
        <Label text="Требования к паролю:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Label text="• Минимум 8 символов" style="-fx-text-fill: #666; -fx-font-size: 12px;" />
        <Label text="• Хотя бы одна заглавная буква" style="-fx-text-fill: #666; -fx-font-size: 12px;" />
        <Label text="• Хотя бы одна строчная буква" style="-fx-text-fill: #666; -fx-font-size: 12px;" />
        <Label text="• Хотя бы одна цифра" style="-fx-text-fill: #666; -fx-font-size: 12px;" />
    </VBox>

    <!-- Кнопки действий -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton"
                text="Отмена"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;"
                onAction="#handleCancel"
                cancelButton="true" />

        <Button fx:id="saveButton"
                text="Сохранить"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"
                onAction="#handleSave"
                defaultButton="true" />
    </HBox>

    <Label text="* - обязательные поля для заполнения"
           style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px; -fx-font-style: italic;" />

</VBox>
