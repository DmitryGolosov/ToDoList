<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.Dmitriy.NauJava_ToDo_List.controller.UserEditController"
      spacing="15"
      padding="20"
      style="-fx-background-color: #f5f5f5;">

    <Label text="Редактирование пользователя"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <Label fx:id="userIdLabel"
           text="ID: "
           style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #3498db;" />

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints prefWidth="120" halignment="RIGHT" />
            <ColumnConstraints prefWidth="250" />
        </columnConstraints>

        <Label text="Имя:*"
               GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;" />
        <TextField fx:id="firstNameField"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"
                   promptText="Введите имя"
                   style="-fx-pref-width: 250px;" />

        <Label text="Фамилия:*"
               GridPane.rowIndex="1" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;" />
        <TextField fx:id="lastNameField"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"
                   promptText="Введите фамилию"
                   style="-fx-pref-width: 250px;" />

        <Label text="Email:*"
               GridPane.rowIndex="2" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;" />
        <TextField fx:id="emailField"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"
                   promptText="example@domain.com"
                   style="-fx-pref-width: 250px;" />

        <Label text="Логин:*"
               GridPane.rowIndex="3" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;" />
        <TextField fx:id="loginField"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"
                   promptText="Введите логин"
                   style="-fx-pref-width: 250px;" />

        <Label text="Статус:"
               GridPane.rowIndex="4" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;" />
        <HBox GridPane.rowIndex="4" GridPane.columnIndex="1" spacing="10">
            <CheckBox fx:id="activeCheckBox" text="Активен" />
            <Label text="(если снять галочку, пользователь не сможет входить)"
                   style="-fx-text-fill: #666; -fx-font-size: 11px;" />
        </HBox>
    </GridPane>

    <Label fx:id="errorLabel"
           style="-fx-text-fill: #e74c3c; -fx-font-size: 12px; -fx-wrap-text: true;"
           VBox.vgrow="ALWAYS" />

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton"
                text="Отмена"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;"
                onAction="#handleCancel"
                cancelButton="true" />

        <Button fx:id="saveButton"
                text="Сохранить изменения"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"
                onAction="#handleSave"
                defaultButton="true" />
    </HBox>

    <Label text="* - обязательные поля для заполнения"
           style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px; -fx-font-style: italic;" />

</VBox>
